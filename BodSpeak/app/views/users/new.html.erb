<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
	  <!-- Here starts the sidebar
	  <%= f.fields_for :patient_infos do |p| %>
	  <%= p.label :age, "Age" %>
	  <%= p.text_field :age %>
	  <%= p.label :anonymous, "Anonymous" %>
	  <%= p.text_field :anonymous %>
	  <%= p.label :gender, "Gender" %>
	  <%= p.text_field :gender %>
	  <% end %>
	  -->

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>